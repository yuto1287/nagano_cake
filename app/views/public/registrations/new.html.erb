<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.first_name_field :last_name, autofoucus: true, autocomplete: "last_name" %>
    <%= f.label :first_name %>
    <%= f.last_name_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %>
    <%= f.last_name_kana_field: last_name_kana, autocomplete: "last_name_kana" %>
    <%= f.label :first_name_kana %>
    <%= f.first_name_kana_field: first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.postal_code_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.address_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.telephone_number :telephone_number, autocomplete: "telephone_namber" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
